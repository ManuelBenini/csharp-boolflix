@{
    ViewData["Title"] = "Modifica serie TV";

    Layout = "_EditorLayout";
}

@model TvSerie

<form asp-controller="TvSerie" asp-action="Update" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Nome serie:</label>
        <input type="text" asp-for="Title" class="form-control" placeholder="Inserisci nome">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Numero di stagioni della Serie:</label>
        <input type="number" asp-for="Duration" class="form-control" placeholder="Inserisci numero di stagioni">
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Descrizione serie:</label>
        <input type="text" asp-for="Description" class="form-control" placeholder="Inserisci descrizione">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>